<?xml version="1.0"?>

<launch>
    <include file="$(find grizzly_description)/launch/description.launch" />
    <node pkg="rosserial_python" type="message_info_service.py" name="rosserial_message_info" />

    <node pkg="imu_filter_madgwick" type="imu_filter_node" name="imu_filter">
        <rosparam>
            gain: 0.1
            zeta: 0.001
            publish_tf: false
            use_magnetic_field_msg: true
        </rosparam>
    </node>

    <!-- Grizzly hardware driver -->
    <node pkg="grizzly_base" type="grizzly_node" name="grizzly_node" output="screen" />

    <!-- Differential controller parameters and basic localization -->
    <include file="$(find grizzly_control)/launch/control.launch" />

    <!-- Diagnostic Aggregator -->
    <node pkg="diagnostic_aggregator" type="aggregator_node" name="diagnostic_aggregator">
        <rosparam command="load" file="$(find grizzly_base)/config/diagnostics.yaml"/>
    </node>
</launch>
